<%- include('./layouts/header.ejs') %>

    <div class="container">
        <h1>文章列表</h1>
        <div class="list-group">
            <% list.forEach(item => {%>
                <a href="#" class="list-group-item">
                    <%= item.title %>
                        <span class="badge" style="background-color: #5bc0de;">发表时间：
                            <%= item.ctime %>
                        </span>
                        <span class="badge" style="background-color: #f0ad4e;">作者：
                            <%= item.nickname %>
                        </span>
                </a>
                <% }) %>
        </div>
         <!-- 分页 -->
    <nav aria-label="Page navigation" class="text-center">
            <ul class="pagination">
                <li class="<%= nowPage == 1 ? 'disabled' : ''%>">
                    <<%= nowPage == 1 ? 'span' : 'a'%> href="/?page=<%= nowPage == 1 ? 1 : nowPage - 1 %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </<%= nowPage == 1 ? 'span' : 'a'%>>
                </li>
                <% for(var i = 0; i < totalPage; i++) {%>
                <li class="<%= nowPage == (i+1) ? 'active' : '' %>">
                    <a href="/?page=<%= i+1 %>"><%= i+1 %></a>
                </li>
                <% } %>
                <li class="<%= nowPage == totalPage ? 'disabled' : ''%>">
                    <<%= nowPage == totalPage ? 'span' : 'a'%> href="/?page=<%= nowPage == totalPage ? totalPage : nowPage + 1 %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </<%= nowPage == totalPage ? 'span' : 'a'%>>
                </li>
            </ul>
        </nav>
    </div>

   

    <%- include('./layouts/footer.ejs')%>